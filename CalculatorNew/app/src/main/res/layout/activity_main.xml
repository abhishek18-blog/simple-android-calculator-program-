<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="#121212">


    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:background="#1E1E1E"
        android:gravity="bottom"
        android:hint="0"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="48dp" />

    <TextView
        android:id="@+id/results"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/display"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="487dp"
        android:layout_marginBottom="139dp"
        android:background="#1E1E1E"
        android:gravity="bottom"
        android:padding="14dp"
        android:text="Results: "
        android:textColorHint="@color/white"
        android:textSize="32dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/display"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFBF00"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="32dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/display"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:backgroundTint="#FFBF00"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="32dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/display"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/btn2"
        android:backgroundTint="#FFBF00"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="32dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/display"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/btn3"
        android:backgroundTint="#FFBF00"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="32dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn1"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFBF00"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="32dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn2"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/btn5"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FFBF00"
        android:text="6"
        android:textSize="32dp"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn2"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/btn6"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FFBF00"
        android:text="7"
        android:textSize="32dp"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn4"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/btn7"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FFBF00"
        android:text="8"
        android:textSize="32dp"/>


    <Button
        android:id="@+id/btn9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn5"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FFBF00"
        android:text="9"
        android:textSize="32dp"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn6"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/btn5"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FFBF00"
        android:text="0"
        android:textSize="32dp"/>

    <Button
        android:id="@+id/btnC"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn7"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/btn0"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FF8C00"
        android:text="C"
        android:textSize="32dp"/>


    <Button
        android:id="@+id/btnMinus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn9"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FF8C00"
        android:text="-"
        android:textSize="32dp"/>

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn0"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/btnMinus"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FF8C00"
        android:text="+"
        android:textSize="32dp"/>

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btnC"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/btn0"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FF8C00"
        android:text="X"
        android:textSize="32dp"/>


    <Button
        android:id="@+id/btnDiv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn8"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/btnMultiply"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FF8C00"
        android:text="/"
        android:textSize="32dp"/>


    <Button
        android:id="@+id/btnEqual"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btnDiv"
        android:layout_toRightOf="@id/btnMultiply"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:backgroundTint="#FF8C00"
        android:text="="
        android:textSize="32dp"/>
</RelativeLayout>
